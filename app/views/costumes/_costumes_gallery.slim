.photos-container
  - costumes.each do |costume|

    .photo-container
      .image-costume-photo-title
        p = costume.name
      = link_to costume, class: 'link-white ' do
        = image_tag costume.photos.last.variant(resize: "200x150^", gravity: :center, crop: "200x150+0+0")
      .image-costume-photo-info.f-sb
        span = time_ago_in_words(costume.created_at)
        span
          = "👁 #{costume.impressions_count}"

.content-center.mt-2 = paginate costumes, window: 1