doctype html
html
  head
    - site_name = 'Casply - cosplay community'
    = display_meta_tags site: site_name, og: { site_name: site_name }
    = csrf_meta_tags

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    script src="//vk.com/js/api/openapi.js" type="text/javascript"
    = javascript_pack_tag 'application'
    = stylesheet_pack_tag 'application'
    = javascript_pack_tag 'slider'
    = javascript_pack_tag 'avatar_editor'
    = javascript_pack_tag 'social_auth'
    = javascript_pack_tag 'event_form'
    = javascript_pack_tag 'events_search'
    meta content="width=device-width, initial-scale=1" name="viewport" /

  body
    = render 'layouts/locales'
    = Gon::Base.render_data
    = render 'layouts/nav'

    = render 'layouts/flash'
    = yield
